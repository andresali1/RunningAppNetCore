@using RunningAppNetCore.Data.Enum;
@using RunningAppNetCore.ViewModels;
@model EditClubViewModel

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" value="AddressId" id="AddressId" />
    <div class="form-group">
        <label asp-for="Title">Título</label>
        <input asp-for="Title" class="form-control" placeholder="Título">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Descripción</label>
        <input asp-for="Description" class="form-control" placeholder="Descripción">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClubCategory">Categoría</label>
        <select asp-for="ClubCategory" asp-items="@Html.GetEnumSelectList<ClubCategory>()" class="form-control form-control-lg">
            <option>--Seleccionar--</option>
        </select>
        <span asp-validation-for="ClubCategory" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address.Street">Calle</label>
        <input asp-for="Address.Street" class="form-control" placeholder="Calle">
        <span asp-validation-for="Address.Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address.City">Ciudad</label>
        <input asp-for="Address.City" class="form-control" placeholder="Ciudad">
        <span asp-validation-for="Address.City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address.Department">Departamento</label>
        <input asp-for="Address.Department" class="form-control" placeholder="Ciudad">
        <span asp-validation-for="Address.Department" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image">Imagen</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Imagen">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>