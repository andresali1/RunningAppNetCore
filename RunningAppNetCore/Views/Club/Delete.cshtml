@model Club


<div class="container d-flex flex-column justify-content-center align-items-center">
    <h1 class="mb-4">¿Está seguro que quiere eliminar éste Club?</h1>
    <input type="hidden" value="AddressId" id="AddressId" />
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="@Model.Image" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.Description</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Categoría: @Model.ClubCategory</li>
            <li class="list-group-item">Calle: @Model.Address.Street</li>
            <li class="list-group-item">Ciudad: @Model.Address.City</li>
            <li class="list-group-item">Departamento: @Model.Address.Department</li>
        </ul>
        <div class="card-body text-center">
            <div class="form-group">
                <form action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>